extends ../layouts/main-layout.pug

block styles 
    link(rel='stylesheet' href='../css/forms.css')

block content
      form(action='/admin/edit-product' method='POST')
        .form-group.row
          label.col-sm-2.col-form-label(for='name') Product Name
          .col-sm-10
            input#name.form-control(type='text' name='name')
        .form-group.row
            label.col-sm-2.col-form-label(for='price') Product Price
            .col-sm-10
              input#price.form-control(type='text' name='price')
        .form-group.row
            label.col-sm-2.col-form-label(for='imageUrl') Product Image
            .col-sm-10
              input#image.form-control(type='text' name='imageUrl')
        .form-group.row
            label.col-sm-2.col-form-label(for='description') Product Description
            .col-sm-10
              input#description.form-control(type='text' name='description')
        .form-group.row
          .col-sm-10.offset-sm-2
            input.btn.btn-primary(type='submit' value='Save Product')

