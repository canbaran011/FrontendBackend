extends ../layouts/main-layout.pug

//- block styles 
//-   link(rel="stylesheet" href="/css/forms.css")

block content
  form(action='/admin/products' method='POST')

    input(type="hidden" name="id" value=`${product.id}`)

    .form-group.row
      label.col-sm-2.col-form-label(for='name') Product Name
      .col-sm-10
        input#name.form-control(type='text' name='name' value=`${product.name}`)

    .form-group.row
      label.col-sm-2.col-form-label(for='price') Product Price
      .col-sm-10
        input#price.form-control(type='text' name='price' value=`${product.price}`)

    .form-group.row
      label.col-sm-2.col-form-label(for='imageUrl') Product Image
      .col-sm-10
        input#image.form-control(type='text' name='imageUrl' value=`${product.imageUrl}`)

    .form-group.row
      label(for='description').col-sm-2.col-form-label Description
      .col-sm-10
        textarea.form-control(name="description" cols="30" rows="10") #{product.description}

    .form-group.row
      .col-sm-10.offset-sm-2
        input.btn.btn-primary(type='submit' value='Save Product')

