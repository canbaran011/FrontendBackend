mixin createProduct(product)
        .col-md-4
              .card.my-3
                img.card-img-top(src=`../img/${product.imageUrl}`)
                .card-body
                  h5.card-title
                    a(href=`/products/${product.id}`) #{product.name}
                  small.text-muted
                    i.fa.fa-try #{product.price}                
                .card-footer.text-center
                  a.btn.btn-outline-danger.btn-sm(href=`/products/${product.id}`) Details             
                  a.btn.btn-outline-danger.btn-sm.ml-3(href='#') Add to Cart
